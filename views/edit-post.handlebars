<div class = "container">
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="form-outline mb-4">
      <input name="post-title" id="post-title" type="text" value="{{post.title}}" class="form-control" />
    </div>
    <div class="form-outline mb-4">
      <textarea class="form-control" name="post-text" id="post-text" rows="3">{{post.post}}</textarea>
    </div>
    <div style="float:right">
      Posted by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-primary">Save post</button>
    <button type="button" id="delete-post-btn" class="btn btn-primary">Delete post</button>
  </form>
</div>

<div class="container">
  <br><br>
  <h2> Add Comment</h2>
  <form class="comment-form">
    <div class="form-outline mb-4">
      <textarea class="form-control" name="comment-body" id="comment-body"></textarea>
    </div>
    <div>
      <button type="submit" class="btn btn-primary">Post Comment</button>
    </div>
  </form>
</div>


{{> comments post.comments}}

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/comment.js"></script>